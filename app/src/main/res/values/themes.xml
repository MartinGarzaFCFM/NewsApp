<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/NewsApp_AmericanBronze</item>
        <!-- <item name="android:background">@color/NewsApp_Eggshell</item> -->
        <item name="android:textSize">@dimen/newsApp_text_size</item>
        <item name="editTextStyle">@style/NewsApp_EditText</item>
        <!-- Estilo de los botones -->
        <item name="materialButtonStyle">@style/NewsApp_Button</item>
    </style>

    <style name="NewsApp_Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/NewsApp_AmericanBronze</item>
        <item name="android:textColor">@color/NewsApp_Bone</item>
    </style>

    <style name="NewsApp_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/NewsApp_Beige</item>
        <item name="android:textColor">@color/NewsApp_AmericanBronze</item>
    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp" />
</resources>