<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".RegisterFragment"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_ProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/imagen_de_perfil"
        tools:src="@tools:sample/avatars"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_broken_image_24"/>

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:padding="0dp"
        android:text="@string/subir_imagen" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Nombres"
        android:hint="@string/NamesInput"
        android:inputType="text" />

    <EditText
        android:id="@+id/lastNameInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Apellidos"
        android:hint="@string/LastNamesInput"
        android:inputType="text" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Email"
        android:hint="@string/emailInput"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Contraseña"
        android:hint="@string/passwordInput" />

    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Confirma Contraseña"
        android:hint="@string/confirmPasswordInput" />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Nombre de Usuario"
        android:hint="@string/usernameInput" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registerButton" />

</LinearLayout>