<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".UserProfileFragment">


    <ImageView
        android:id="@+id/iv_ProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/imagen_de_perfil"
        tools:src="@tools:sample/avatars"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_broken_image_24"/>

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:padding="0dp"
        android:text="@string/subir_imagen" />

    <TextView
        android:id="@+id/tv_Names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_s" />
    <EditText
        android:id="@+id/namesInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/nombre_s"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_LastNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apellido_s" />
    <EditText
        android:id="@+id/lastnamesInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/apellido_s"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email" />
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tv_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_de_usuario" />
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/nombre_de_usuario"
        android:inputType="text" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guardar" />
</LinearLayout>